#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    srand(time(0)); 
    int a = (rand() % 100) + 1;//数字を１～１００でランダムに生成
    int b ,c ,i = 1,s = 0;
    
    
    while(i == 1)//繰り返し
    {
        printf("数字を1～100の中で予想し、数字を当ててください\n");
        scanf("%d",&b);
        
        c = b - a ;//ランダム生成された数字との差をとる。
        
        if(c > 0 )
        {
            printf("数字が高いです\n");
            
        }
        else if(c < 0)
        {
            printf("数字が低いです\n");
        }
        
        else
        {
            printf("正解です\n");
            break;
        }
        s++;//ｓの値を１ずつ増やす
        if(s==10)//if文達成で強制終了
        {
            printf("GAME OVER\n");
            break;
        }
    }

    return 0;
}
